<div class="mt-6 grid grid-cols-2">
<div class="p-3">
  <div class="relative flex flex-col min-w-0 mb-6 break-words border-0 border-transparent border-solid shadow-xl bg-slate-800  rounded-xl bg-clip-border">
    <div class="p-6 pb-0 border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
      <h6 class=" text-white">Patient table</h6>
    </div>
    <div class="flex-auto px-0 pt-0 pb-2">
      <div class="p-0 overflow-x-auto">
        <table class="items-center w-full mb-0 align-top border-collapse  border-white/40 text-slate-500">
          <thead class="align-bottom">
            <tr>
              <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-collapse shadow-none  border-white/40  text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Patient</th>
              <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-collapse shadow-none  border-white/40  text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Disease</th>
              <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-collapse shadow-none  border-white/40  text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Status</th>
              <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-collapse shadow-none  border-white/40  text-white text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Appointment</th>
            </tr>
          </thead>
          <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td class="p-2 align-middle bg-transparent border-b  border-white/40 whitespace-nowrap shadow-transparent">
                  <div class="flex px-2 py-1">
                    <div class="flex flex-col justify-center">
                      <h6 class="mb-0 text-m leading-normal  text-white"><%= patient.name %></h6>
                      <p class="mb-0 text-xs leading-tight  text-white  opacity-80 text-slate-400"><%= patient.phone %></p>
                    </div>
                  </div>
                </td>
                <td class="p-2 align-middle bg-transparent border-b  border-white/40 whitespace-nowrap shadow-transparent">
                  <p class="mb-0 text-sm font-semibold leading-tight  text-white  opacity-80"><%= patient.disease.capitalize %></p>
                </td>
                <td class="p-2 text-sm leading-normal text-center align-middle bg-transparent border-b  border-white/40 whitespace-nowrap shadow-transparent">
                  <span class="bg-gradient-to-tl from-emerald-500 to-teal-400 px-2.5 py-1 text-xs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white"><%= active_or_inactive(patient) %></span>
                </td>
                <td class="p-2 text-center align-middle bg-transparent border-b  border-white/40 whitespace-nowrap shadow-transparent">
                  <span class="text-sm font-semibold leading-tight  text-white  opacity-80 text-slate-400"><%= appointment(patient) %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
  <div class="p-3">
    <div class="border-black/12.5 bg-slate-800  shadow-xl relative z-20 flex min-w-0 flex-col break-words rounded-xl border-0 border-solid bg-clip-border">
      <div class="border-black/12.5 mb-0 rounded-t-2xl border-b-0 border-solid p-6 pt-4 pb-0">
        <h6 class="capitalize  text-white">Number of patients registered vs days</h6>
      </div>
      <div class=" p-4">
        <div>
          <%= area_chart Patient.group(:appointment_date).count, colors: ["#6E7479"] %>
        </div>
      </div>
    </div>
  </div>
</div>